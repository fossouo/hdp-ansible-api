{
	"Clusters": {
		"desired_configs": {
			"type": "hdfs-site",
			"tag": "{{ range(00000000, 99999999) | random }}",
			"properties": {
				"dfs.block.access.token.enable": "true",
				"dfs.blockreport.initialDelay": "120",
				"dfs.blocksize": "134217728",
			  {% if cluster_services.HDFS.HA is defined and cluster_services.HDFS.HA %}"dfs.client.failover.proxy.provider.{{ cluster_name }}": "org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider",{% endif %}
				"dfs.client.read.shortcircuit": "true",
				"dfs.client.read.shortcircuit.streams.cache.size": "4096",
				"dfs.client.retry.policy.enabled": "false",
				"dfs.cluster.administrators": " hdfs",
				"dfs.content-summary.limit": "5000",
				"dfs.datanode.address": "0.0.0.0:50010",
				"dfs.datanode.balance.bandwidthPerSec": "12500000",
				"dfs.datanode.data.dir": "{% for dir in hdp_datanode_dir %}{{ dir }}{% if not loop.last %},{% endif %}{% endfor %}",
				"dfs.datanode.data.dir.perm": "750",
				"dfs.datanode.du.reserved": "1073741824",
				"dfs.datanode.failed.volumes.tolerated": "1",
				"dfs.datanode.http.address": "0.0.0.0:50075",
				"dfs.datanode.https.address": "0.0.0.0:50475",
				"dfs.datanode.ipc.address": "0.0.0.0:8010",
				"dfs.datanode.max.transfer.threads": "4096",
				"dfs.domain.socket.path": "/var/lib/hadoop-hdfs/dn_socket",
				"dfs.encrypt.data.transfer.cipher.suites": "AES/CTR/NoPadding",
				"dfs.encryption.key.provider.uri": "",
				{% if cluster_services.HDFS.HA is defined and cluster_services.HDFS.HA %}"dfs.ha.automatic-failover.enabled": "true",
	      "dfs.ha.fencing.methods": "shell(/bin/true)",
	      "dfs.ha.namenodes.{{ cluster_name }}": "nn1,nn2",{% endif %}
				"dfs.heartbeat.interval": "3",
				"dfs.hosts.exclude": "/etc/hadoop/conf/dfs.exclude",
				"dfs.https.port": "50470",
				"dfs.namenode.accesstime.precision": "0",
				"dfs.namenode.audit.log.async": "true",
				"dfs.namenode.avoid.read.stale.datanode": "true",
				"dfs.namenode.avoid.write.stale.datanode": "true",
				"dfs.namenode.checkpoint.dir": "{% for dir in hdp_checkpoint_dir %}{{ dir }}{% if not loop.last %},{% endif %}{% endfor %}",
				"dfs.namenode.checkpoint.edits.dir": "${dfs.namenode.checkpoint.dir}",
				"dfs.namenode.checkpoint.period": "21600",
				"dfs.namenode.checkpoint.txns": "1000000",
				"dfs.namenode.datanode.registration.ip-hostname-check": "false",
				"dfs.namenode.fslock.fair": "false",
				"dfs.namenode.handler.count": "100",
				"dfs.namenode.name.dir.restore": "true",
				"dfs.namenode.safemode.threshold-pct": "0.999",
				"dfs.namenode.name.dir": "{% for dir in hdp_namenode_dir %}{{ dir }}{% if not loop.last %},{% endif %}{% endfor %}",
				{% if cluster_services.HDFS.HA is not defined %}"dfs.namenode.http-address": "{{ first_namenode }}:50070",{% endif %}
				{% if cluster_services.HDFS.HA is not defined %}"dfs.namenode.https-address": "{{ first_namenode }}:50470",{% endif %}
				{% if cluster_services.HDFS.HA is defined and not cluster_services.HDFS.HA %}"dfs.namenode.secondary.http-address": "{{ second_namenode }}:50090",
				"dfs.namenode.secondary.https-address" : "{{ second_namenode }}:50091";
				"dfs.namenode.rpc-address": "{{ first_namenode }}:8020",{% endif %}
				{% if cluster_services.HDFS.HA is defined and cluster_services.HDFS.HA %}"dfs.namenode.http-address.{{ cluster_name }}.nn1": "{{ groups['NAMENODE'][0] }}:50070",
	      "dfs.namenode.http-address.{{ cluster_name }}.nn2" : "{{ groups['NAMENODE'][1] }}:50070",
				"dfs.namenode.https-address.{{ cluster_name }}.nn1": "{{ groups['NAMENODE'][0] }}:50470",
	      "dfs.namenode.https-address.{{ cluster_name }}.nn2" : "{{ groups['NAMENODE'][1] }}:50470",
				"dfs.namenode.rpc-address.{{ cluster_name }}.nn1": "{{ groups['NAMENODE'][0] }}:8020",
	      "dfs.namenode.rpc-address.{{ cluster_name }}.nn2" : "{{ groups['NAMENODE'][1] }}:8020",
				"dfs.journalnode.edits.dir": "{% for dir in hdp_journalnode_dir %}{{ dir }}{% if not loop.last %},{% endif %}{% endfor %}",
				"dfs.namenode.shared.edits.dir": "qjournal://{% for journalnode in groups['JOURNALNODE'] %}{{ journalnode }}:8485{% if not loop.last %};{% endif %}{% endfor %}/{{ cluster_name }}",
				"dfs.nameservices": "{{ cluster_name }}",{% endif %}
				{% if cluster_services.RANGER.PLUGIN.HDFS is defined and cluster_services.RANGER.PLUGIN.HDFS %}"dfs.namenode.inode.attributes.provider.class" : "org.apache.ranger.authorization.hadoop.RangerHdfsAuthorizer",{% endif %}
				"dfs.namenode.stale.datanode.interval": "30000",
				"dfs.namenode.startup.delay.block.deletion.sec": "3600",
				"dfs.namenode.write.stale.datanode.ratio": "1.0f",
				{% if cluster_services.HDFS.SSL is defined and cluster_services.HDFS.SSL %}
				"dfs.http.policy" : "HTTPS_ONLY",
				"dfs.client.https.need-auth" : "false",
				{% else %}
				"dfs.http.policy" : "HTTP_ONLY",
				{% endif %}
				"dfs.permissions.enabled": "true",
				"dfs.permissions.superusergroup": "hdfs",
				"dfs.replication": "3",
				"dfs.replication.max": "50",
				"dfs.support.append": "true",
				"dfs.webhdfs.enabled": "true",
				"fs.permissions.umask-mode": "022",
				"hadoop.caller.context.enabled": "true",
				"nfs.exports.allowed.hosts": "* rw",
				"nfs.file.dump.dir": "/tmp/.hdfs-nfs"
			}
		}
	}
}
